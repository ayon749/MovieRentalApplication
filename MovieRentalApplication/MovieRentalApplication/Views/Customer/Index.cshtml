@model List<MovieRentalApplication.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-bordered table-hover" >
	<tr>
		<th>Customer</th>
	</tr>
			@foreach(var customer in Model)
			{
				<tr>
					<td>@Html.ActionLink(customer.Name,"Details","Customer",new {id=customer.id ,Name=customer.Name},null)</td>
				</tr>
			}
		
	
</table>
